@model HotelManager_MVC.ViewModel.RoomsViewModel
@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Room
                <small>Add</small>
            </h1>
        </div>
        <!-- /.col-lg-12 -->
        @using (Html.BeginForm("CreateRoom","Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="col-lg-7" style="padding-bottom:120px">
                
                    @Html.ValidationSummary(false, "",new { @class="text-danger"})              
                    <div class="form-group">
                        <label>Room Name</label>
                        @Html.TextBoxFor(model=>model.rooms.nameRoom,new { @class= "form-control", placeholder = "Please Enter Room Name" })                     
                    </div>
                    <div class="form-group">
                        <label>Room status</label>                  
                        @Html.DropDownListFor(model=>model.rooms.RoomStatus_id,(SelectList)ViewBag.getRommStatus, "Please Choose Room status", new { @class = "form-control" })                    
                    </div>
                    <div class="form-group">
                        <label>Room type</label>
                        @Html.DropDownListFor(model => model.rooms.RoomType_id, (SelectList)ViewBag.getRoomType, "Please Choose Room type", new { @class = "form-control" })
                    </div>              
                    <button type="submit" class="btn btn-default">Room Add</button>
                    <button type="reset" class="btn btn-default">Reset</button>
               
            </div>
        }

    </div>
    <!-- /.row -->
</div>

